<script>
  function changeNavbar(apihost) {
    $("#username").detach();
    $("#navbar").append('<li><a href="/admin"><span class="glyphicon glyphicon-user"></span>내 물건</a></li>');
    if (apihost === "facebook") {
      $("#navbar").append('<li><a href="#" onclick="FB.logout();"><span class="glyphicon glyphicon-user"></span>logout</a></li>');
    } else if (apihost === "kakao") {
      $("#navbar").append('<li><a href="/" onclick="Kakao.Auth.logout()"><span class="glyphicon glyphicon-user"></span>logout</a></li>');
    }
  }

</script>
